<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/iv_girl_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/img_girl"
        android:transitionName="connect_view" />

    <ImageView
        android:id="@+id/iv_boy_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/iv_girl_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/img_boy"
        android:transitionName="connect_view_boy" />

</RelativeLayout>